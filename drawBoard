import javafx.scene.paint.Color;
import javafx.scene.shape.Line;

/*
 * draw a board and let user to control by LEFT and RIGHT key
 */

/**
 *
 * @author Xuanyi Zhu
 */
public class drawBoard{
    private final Line line;
    
    drawBoard(krakoutInterface kr, double lineStartX,double lineStartY,double lineEndX,double lineEndY){
        this.line = new Line(lineStartX,lineStartY,lineEndX,lineEndY);
        line.setStrokeWidth(2.0);
        line.setStroke(Color.BLACK);
        kr.addLine(this.line);
        kr.moveBoard(this.line);
    }

}
