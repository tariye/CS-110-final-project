import javafx.application.Application;
import javafx.scene.paint.Color;
import javafx.scene.shape.Line;
/*
 * this is the main class 
 */

/**
 *
 * @author Xuanyi Zhu
 */
public class krakout extends DrawPane implements krakoutInterface {

    public drawBoard board;
    public double BoardStartX = getPANE_X_DIM() * 0.48;
    public double BoardStartY = getPANE_Y_DIM() * 0.9;
    public double BoardEndX = getPANE_X_DIM() * 0.52;
    public double BoardEndY = getPANE_Y_DIM() * 0.9;

    /**
     * constructor draw pane and board
     */
    public krakout() {
        super(Color.WHITE);
        initialize();
    }

    public static void main(String args[]) {
        Application.launch(args);
    }

    private void initialize() {
        board = new drawBoard(this, BoardStartX, BoardStartY, BoardEndX, BoardEndY);
    }

    /**
     *
     * @param line
     */
    @Override
    public void addLine(Line line) {
        pane.getChildren().add(line);

    }

    /**
     * control the board
     *
     * @param line
     */
    @Override
    public void moveBoard(Line line) {

        line.setOnKeyPressed(e -> {
            switch (e.getCode()) {
                case LEFT:
                    line.setStartX(BoardStartX - 10);
                    line.setEndX(BoardEndX - 10);
                    
                    // this is for test 
                    System.out.println("left boardStartX: " + BoardStartX);
                    System.out.println("left boardEndX: " + BoardEndX);
                    
                    break;
                case RIGHT:
                    line.setStartX(BoardStartX + 10);
                    line.setEndX(BoardEndX + 10);
                    
                    // this is for test 
                    System.out.println("right boardStartX: " + BoardStartX);
                    System.out.println("right boardEndX: " + BoardEndX);

                    break;
            }
        });
        
        // text is focused to receive key input
        line.requestFocus();

    }

}
