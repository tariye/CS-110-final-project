/**
 *
 * @author Xuanyi Zhu
 */
public class krakout extends DrawPane implements krakoutInterface{

    public drawBoard board;
    public double lineStartX = getPANE_X_DIM() * 0.48;
    public double lineStartY = getPANE_Y_DIM()*0.9;
    public double lineEndX = getPANE_X_DIM() * 0.52;
    public double lineEndY = getPANE_Y_DIM()*0.9;
    public krakout() {
        super(Color.WHITE);
        initialize();

    }

    public static void main(String args[]) {
        Application.launch(args);
    }

    private void initialize() {
        
        board = new drawBoard(this,lineStartX, lineStartY,lineEndX, lineEndY);
    }

    /**
     *
     * @param line
     */
    @Override
    public void addLine(Line line) {
        pane.getChildren().add(line);
    }
}
